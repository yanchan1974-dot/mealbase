FROM python:3.11-slim

WORKDIR /app
# Кладём ZIP внутрь образа
COPY mealbase-starter.zip /app/

# Установим unzip, распакуем ZIP и поставим зависимости
RUN apt-get update && apt-get install -y unzip && rm -rf /var/lib/apt/lists/* \
    && unzip -o /app/mealbase-starter.zip -d /app \
    && pip install --no-cache-dir -r /app/mealbase-starter/requirements.txt

ENV DATA_DIR=/app/mealbase-starter/data

EXPOSE 10000
# Запускаем API (Render подставит $PORT)
CMD ["bash","-lc","cd /app/mealbase-starter && uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-10000}"]
