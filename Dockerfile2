FROM python:3.11-slim

# Всё делаем в /app
WORKDIR /app

# Кладём ZIP внутрь образа
COPY mealbase-starter.zip /app/

# Ставим unzip, распаковываем ZIP в /app (в твоём ZIP файлы лежат сразу app/, requirements.txt, и т.д.)
RUN apt-get update && apt-get install -y unzip && rm -rf /var/lib/apt/lists/* \
    && unzip -o /app/mealbase-starter.zip -d /app

# Ставим зависимости из корневого requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# Папка для данных
ENV DATA_DIR=/app/data

EXPOSE 10000
# Запускаем API (Render подставит $PORT)
CMD ["bash","-lc","uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-10000}"]
